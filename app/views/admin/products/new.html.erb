<%= form_for [:admin, @product] do |f| %>
 
	<div class="group">
		<%= f.label("標題") %>
		<%= f.text_field :title %>
	</div>

	<div class="group">
		<%= f.label("敘述") %>
		<%= f.text_area :description %>
	</div>

	<div class="group">
		<%= f.label("數量") %>
		<%= f.text_field :quantity %>
	</div>

	<p>
		<%= f.fields_for :photos do |p| %> 
			<%= p.file_field :image %>
		<% end %>
	</p>

	<p><%= f.submit "Submit", :disable_with => 'Submiting...' %></p>
 
<% end %> 